<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Driver.Activity.Fragment.Activity.ProfileActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_header"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/purple_200">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile "
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/robotoslabextrabold"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:layout_marginLeft="15dp"
                    />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/whitecross"
                    android:padding="10dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/ivCross"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_header"
                android:layout_marginTop="-45dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"

                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_pic"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="40dp"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/profile" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="-20dp"
                        android:layout_marginTop="60dp"
                        android:layout_toEndOf="@id/profile_pic"
                        android:layout_toRightOf="@id/profile_pic"
                        android:src="@drawable/edit"/>


                </RelativeLayout>

                <EditText
                    android:id="@+id/edit_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="John"
                    android:background="@null"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:fontFamily="@font/robotoslabbold"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/grey_rounded"

                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="230+ "
                        android:fontFamily="@font/robotoslabbold"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:textColor="@color/blue"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rides"
                        android:textSize="14sp"
                        android:fontFamily="@font/robotoslabregular"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.8 "
                        android:fontFamily="@font/robotoslabbold"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:textColor="@color/blue"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/avg_rating"
                        android:textSize="14sp"
                        android:fontFamily="@font/robotoslabregular"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="221+"
                        android:fontFamily="@font/robotoslabbold"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:textColor="@color/blue"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reviews"
                        android:fontFamily="@font/robotoslabregular"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"

                        />
                </LinearLayout>
            </LinearLayout>















            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@id/ll_main"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Email             : "
                            android:id="@+id/txtEmail"

                            android:fontFamily="@font/robotoslabregular"
                            android:textSize="14sp"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            />
                        <EditText
                            android:id="@+id/editEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="abc@gmail.com"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/txtEmail"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:fontFamily="@font/robotoslabregular"
                            android:layout_marginLeft="15dp"
                            android:textSize="14sp"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/editEmail"
                            android:layout_toRightOf="@+id/txtEmail"
                            android:background="@color/view_Grey"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date of Birth  : "
                            android:textSize="14sp"
                            android:id="@+id/tx3"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/robotoslabregular"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            />
                        <TextView
                            android:id="@+id/txtDob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="12/12/80"
                            android:layout_toRightOf="@+id/tx3"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:gravity="center_vertical"
                            android:inputType="number"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/robotoslabregular"
                            android:background="@null"
                            android:layout_marginLeft="15dp"
                            android:textSize="14sp"
                            />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/txtDob"
                            android:layout_toRightOf="@+id/tx3"
                            android:background="@color/view_Grey"/>


                    </RelativeLayout>




                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gender           : "
                            android:fontFamily="@font/robotoslabregular"
                            android:textSize="14sp"
                            android:id="@+id/tx2"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            />

                        <EditText
                            android:id="@+id/etGender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:background="@null"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tx2"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:fontFamily="@font/robotoslabregular"
                            android:gravity="center_vertical"
                            android:hint="Male"
                            android:singleLine="true"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/etGender"
                            android:layout_toRightOf="@+id/tx2"
                            android:background="@color/view_Grey"/>



                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact No.   : "
                            android:textSize="14sp"
                            android:id="@+id/tx1"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/robotoslabregular"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            />
                        <TextView
                            android:id="@+id/txtMobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="+91XXXXXXXXXX"
                            android:layout_toRightOf="@+id/tx1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:gravity="center_vertical"
                            android:inputType="number"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/robotoslabregular"
                            android:background="@null"
                            android:layout_marginLeft="15dp"
                            android:textSize="14sp"
                            />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/txtMobile"
                            android:layout_toRightOf="@+id/tx1"
                            android:background="@color/view_Grey"/>


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Personal Documents :- "
                            android:textSize="14sp"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:fontFamily="@font/robotoslabregular"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Goverment ID  "
                            android:textSize="14sp"
                            android:id="@+id/tx6"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:fontFamily="@font/robotoslabregular"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:layout_marginLeft="10dp"
                            />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/ivGovt"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/govt"
                            android:layout_alignParentRight="true"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/ivGovt"
                            android:layout_toRightOf="@+id/tx6"
                            android:background="@color/view_Grey"/>



                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Driving Licence  "
                            android:textSize="14sp"
                            android:id="@+id/tx4"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:fontFamily="@font/robotoslabregular"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:layout_marginLeft="10dp"
                            />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/drivinglicence"
                            android:id="@+id/ivDriving"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/ivDriving"
                            android:background="@color/view_Grey"/>



                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vehicle Documents :- "
                            android:textSize="14sp"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:fontFamily="@font/robotoslabregular"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Commerical Insurance  "
                            android:textSize="14sp"
                            android:id="@+id/tx8"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:fontFamily="@font/robotoslabregular"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:layout_marginLeft="10dp"
                            />
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/drivinglicence"
                            android:id="@+id/ivCommerical"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/ivCommerical"
                            android:layout_toRightOf="@+id/tx8"
                            android:background="@color/view_Grey"/>



                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tax Number: "
                            android:layout_centerVertical="true"
                            android:textSize="14sp"
                            android:id="@+id/txTax"
                            android:fontFamily="@font/robotoslabregular"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            />
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="15dp"
                            android:id="@+id/ivTax"
                            android:src="@drawable/tax"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                </LinearLayout>







            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_Update"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/purple_200"
                android:gravity="center"
                android:text="Update"
                android:fontFamily="@font/robotoslabextrabold"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>