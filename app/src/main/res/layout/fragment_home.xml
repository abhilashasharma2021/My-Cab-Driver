<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeMapFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/card">


        <fragment
            android:id="@+id/frag_map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Activities.ShopInformationActivity">

        </fragment>


        <ImageView
            android:id="@+id/menu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:src="@drawable/menu" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/prf"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:src="@drawable/prf2" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/onlinebtn"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:src="@drawable/online"

            />


    </RelativeLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.github.florent37.shapeofview.shapes.CircleView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:elevation="4dp"
                app:shape_circle_borderColor="@android:color/black"
                app:shape_circle_borderWidth="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/purple_200" />


            </com.github.florent37.shapeofview.shapes.CircleView>


            <com.github.florent37.shapeofview.shapes.CircleView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:elevation="4dp"
                app:shape_circle_borderColor="@android:color/black"
                app:shape_circle_borderWidth="2dp">

                <RelativeLayout
                    android:id="@+id/goOnline"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/robotoslabextrabold"
                        android:text="GO \n ONLINE"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:gravity="center_horizontal" />


                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/goOffline"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/robotoslabextrabold"
                        android:text="GO \n OFFLINE"
                        android:textAlignment="center"
                        android:textColor="@color/purple_200"
                        android:textSize="18sp"
                        android:gravity="center_horizontal" />


                </RelativeLayout>


            </com.github.florent37.shapeofview.shapes.CircleView>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"


        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <RelativeLayout
                    android:id="@+id/rel"
                    android:layout_width="70dp"
                    android:layout_height="70dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/itemImg"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/prf2" />


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/rel"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_toRightOf="@id/rel">

                    <TextView
                        android:id="@+id/prdName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/robotoslabextrabold"
                        android:text="Chicken Wooper + Chicken Dragon"
                        android:textColor="@color/black"
                        android:textSize="16sp" />


                    <RelativeLayout
                        android:id="@+id/kmLeft"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:id="@+id/sent"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/sent" />

                        <TextView
                            android:id="@+id/distanceRemaining"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/sent"
                            android:fontFamily="@font/robotoslabregular"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="10.5 km"
                            android:textColor="@color/black"
                            android:textSize="12sp" />


                        <Button
                            android:id="@+id/btnCall"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/login_btn"
                            android:fontFamily="@font/robotoslabregular"
                            android:text="Call"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:layout_alignParentRight="true" />


                    </RelativeLayout>


                </LinearLayout>


            </RelativeLayout>


            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rel1"
                android:layout_marginTop="2dp"
                android:background="#bdbdbd" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/btngo"
                android:layout_below="@+id/view">

                <RelativeLayout
                    android:id="@+id/relpickup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/home" />

                    <TextView
                        android:id="@+id/pickUpPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/img1"
                        android:fontFamily="@font/robotoslabregular"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/reltime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relpickup"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/timer" />

                    <TextView
                        android:id="@+id/txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/img2"
                        android:fontFamily="@font/robotoslabregular"
                        android:paddingStart="15dp"

                        android:text="Start time : "
                        android:paddingLeft="15dp" />


                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/txt"
                        android:fontFamily="@font/robotoslabregular"
                        android:textColor="@color/black" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_yourareInLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/robotoslabextrabold"
                    android:text="YOU ARE ON THE PICKUP LOCATION"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:visibility="gone" />


            </RelativeLayout>


            <Button
                android:id="@+id/btngo"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/login_btn"
                android:fontFamily="@font/robotoslabextrabold"
                android:text="GO"
                android:textColor="@color/white"
                android:textSize="16sp" />


            <Button
                android:id="@+id/btnstart"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/login_btn"
                android:fontFamily="@font/robotoslabextrabold"
                android:text="START"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone" />


            <Button
                android:id="@+id/btnorderComplete"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/login_btn"
                android:fontFamily="@font/robotoslabextrabold"
                android:text="ORDER COMPLETE"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>



</RelativeLayout>